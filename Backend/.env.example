# Backend Environment Variables Template
# Copy this to Backend/.env and fill in your values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pulsebank?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production

# Email Service (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Twilio (SMS Notifications)
TWILIO_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=https://pulsebank.vercel.app

# Optional: Add other services as needed
